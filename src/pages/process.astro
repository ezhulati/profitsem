---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Container } from '../components/layout/Container';
import { Section } from '../components/layout/Section';
import { Heading } from '../components/ui/Heading';
import { ProcessSection } from '../components/sections/ProcessSection';
import { CTASection } from '../components/sections/CTASection';
import { Badge } from '../components/ui/Badge';

const phases = [
  {
    week: 'Week 1-2',
    title: 'Discovery & Analysis',
    deliverables: [
      '50-point account audit',
      'Profit leak identification report',
      'Competitor analysis document',
      'Tracking & attribution setup',
      'Custom 90-day roadmap',
    ],
  },
  {
    week: 'Week 3-4',
    title: 'Strategy & Setup',
    deliverables: [
      'Campaign architecture plan',
      'Keyword research (500+ keywords)',
      'Ad copy testing matrix (20+ variants)',
      'Landing page recommendations',
      'Budget allocation strategy',
    ],
  },
  {
    week: 'Week 5-8',
    title: 'Launch & Optimization',
    deliverables: [
      'Campaign launch checklist',
      'Weekly optimization reports',
      'A/B test results & insights',
      'Bid strategy refinements',
      'Quality Score improvements',
    ],
  },
  {
    week: 'Week 9-12',
    title: 'Scale & Maximize',
    deliverables: [
      'Scaling strategy document',
      'Audience expansion tests',
      'Advanced automation setup',
      'Monthly business review',
      '90-day performance summary',
    ],
  },
];

const guarantees = [
  'ROI improvement within 90 days or full refund',
  'Weekly performance reports & optimization updates',
  'Dedicated account manager (not a rotating cast)',
  'Cancel anytime, no long-term contract',
  'Real-time dashboard access 24/7',
  'No hidden fees or surprise charges',
];
---

<BaseLayout
  title="Our 90-Day Profit Sprint Process - ProfitSEM"
  description="See how we turn Google Ads into profit machines in just 90 days. Transparent process, guaranteed results."
>
  <!-- Hero -->
  <Section background="gradient" spacing="xl">
    <Container>
      <div class="max-w-4xl mx-auto text-center text-white">
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-white/10 backdrop-blur border border-white/20 rounded-full mb-6">
          <span class="text-emerald-400 text-sm font-semibold">
            90-Day Profit Guarantee
          </span>
        </div>

        <Heading as="h1" size="6xl" className="mb-6">
          Our Proven Process
        </Heading>

        <p class="text-xl text-blue-100 mb-8">
          A systematic approach to turning Google Ads into profit machines.
          No trial and error. No wasted months. Just results in 90 days.
        </p>
      </div>
    </Container>
  </Section>

  <!-- Main Process -->}
  <ProcessSection />

  <!-- Detailed Phases -->
  <Section background="white" spacing="xl">
    <Container>
      <div class="text-center mb-16">
        <Heading as="h2" size="4xl" className="mb-6">
          What You Get Each Phase
        </Heading>
        <p class="text-xl text-gray-600">
          Complete transparency on deliverables
        </p>
      </div>

      <div class="space-y-6">
        {phases.map((phase, index) => (
          <div class="bg-gray-50 rounded-xl p-8 border border-gray-200">
            <div class="flex items-start gap-6">
              <div class="flex-shrink-0">
                <div class="w-14 h-14 bg-gradient-to-br from-emerald-500 to-emerald-600 rounded-xl flex items-center justify-center text-white font-bold text-xl shadow-lg">
                  {index + 1}
                </div>
              </div>

              <div class="flex-1">
                <div class="flex items-center gap-3 mb-3">
                  <Badge variant="info" size="sm">
                    {phase.week}
                  </Badge>
                  <Heading as="h3" size="2xl">
                    {phase.title}
                  </Heading>
                </div>

                <div class="grid md:grid-cols-2 gap-3">
                  {phase.deliverables.map((item) => (
                    <div class="flex items-start gap-2">
                      <svg class="w-5 h-5 text-emerald-500 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                      </svg>
                      <span class="text-gray-700">{item}</span>
                    </div>
                  ))}
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </Container>
  </Section>

  <!-- Guarantees -->
  <Section background="gray" spacing="xl">
    <Container size="lg">
      <div class="text-center mb-16">
        <Heading as="h2" size="4xl" className="mb-6">
          Our Guarantees
        </Heading>
        <p class="text-xl text-gray-600">
          We put our money where our mouth is
        </p>
      </div>

      <div class="bg-white rounded-2xl p-8 md:p-12 shadow-xl">
        <div class="grid md:grid-cols-2 gap-6">
          {guarantees.map((guarantee) => (
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0">
                <svg class="w-6 h-6 text-emerald-500" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
              </div>
              <p class="text-gray-700 font-medium">{guarantee}</p>
            </div>
          ))}
        </div>

        <div class="mt-8 pt-8 border-t border-gray-200 text-center">
          <p class="text-lg font-semibold text-gray-900 mb-2">
            90-Day Money-Back Guarantee
          </p>
          <p class="text-gray-600">
            If we don't improve your ROI within 90 days, you get a full refund of our management fees.
            No fine print. No questions asked.
          </p>
        </div>
      </div>
    </Container>
  </Section>

  <!-- Timeline -->
  <Section background="white" spacing="xl">
    <Container>
      <div class="text-center mb-16">
        <Heading as="h2" size="4xl" className="mb-6">
          Typical Timeline
        </Heading>
      </div>

      <div class="max-w-3xl mx-auto">
        <div class="space-y-4">
          <div class="flex gap-4">
            <div class="flex-shrink-0 w-32 text-sm font-semibold text-blue-600">Day 1</div>
            <div class="flex-1 pb-6 border-l-2 border-blue-200 pl-6">
              <p class="font-semibold mb-1">Initial Consultation</p>
              <p class="text-gray-600 text-sm">30-minute call to understand your business and goals</p>
            </div>
          </div>

          <div class="flex gap-4">
            <div class="flex-shrink-0 w-32 text-sm font-semibold text-blue-600">Day 2-5</div>
            <div class="flex-1 pb-6 border-l-2 border-blue-200 pl-6">
              <p class="font-semibold mb-1">Custom Proposal</p>
              <p class="text-gray-600 text-sm">Receive detailed proposal with pricing and roadmap</p>
            </div>
          </div>

          <div class="flex gap-4">
            <div class="flex-shrink-0 w-32 text-sm font-semibold text-blue-600">Week 1</div>
            <div class="flex-1 pb-6 border-l-2 border-blue-200 pl-6">
              <p class="font-semibold mb-1">Onboarding & Audit</p>
              <p class="text-gray-600 text-sm">Account access, deep dive audit, kick-off call</p>
            </div>
          </div>

          <div class="flex gap-4">
            <div class="flex-shrink-0 w-32 text-sm font-semibold text-blue-600">Week 2-4</div>
            <div class="flex-1 pb-6 border-l-2 border-blue-200 pl-6">
              <p class="font-semibold mb-1">Strategy & Setup</p>
              <p class="text-gray-600 text-sm">Campaign architecture, keyword research, ad creation</p>
            </div>
          </div>

          <div class="flex gap-4">
            <div class="flex-shrink-0 w-32 text-sm font-semibold text-blue-600">Week 5-12</div>
            <div class="flex-1 pb-6 border-l-2 border-emerald-200 pl-6">
              <p class="font-semibold mb-1">Optimize & Scale</p>
              <p class="text-gray-600 text-sm">Continuous optimization, scaling what works</p>
            </div>
          </div>

          <div class="flex gap-4">
            <div class="flex-shrink-0 w-32 text-sm font-semibold text-emerald-600">Day 90</div>
            <div class="flex-1 pl-6">
              <p class="font-semibold mb-1 text-emerald-600">Profitability Milestone</p>
              <p class="text-gray-600 text-sm">Measurable ROI improvement or money back</p>
            </div>
          </div>
        </div>
      </div>
    </Container>
  </Section>

  <!-- CTA -->
  <CTASection client:visible />
</BaseLayout>
