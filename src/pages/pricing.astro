---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Container } from '../components/layout/Container';
import { Section } from '../components/layout/Section';
import { Heading } from '../components/ui/Heading';
import { Card } from '../components/ui/Card';
import { Button } from '../components/ui/Button';
import { Badge } from '../components/ui/Badge';

const plans = [
  {
    name: 'Growth',
    price: '2,500',
    description: 'Complete AI training process for growing businesses',
    recommended: false,
    adSpend: 'Up to $20K/month',
    features: [
      { name: 'CRM integration & sales tracking', included: true },
      { name: 'Consolidated campaign structure', included: true },
      { name: 'Smart bidding implementation', included: true },
      { name: 'Search & Display campaigns', included: true },
      { name: 'Shopping campaigns', included: false },
      { name: 'Performance Max', included: false },
      { name: 'Complete tracking audit', included: true },
      { name: 'Monthly strategy sessions', included: true, detail: '1 per month' },
      { name: 'Performance reporting', included: true, detail: 'Monthly' },
      { name: 'Learning period management', included: true },
      { name: 'Dedicated account manager', included: false },
      { name: 'Landing page optimization', included: false },
      { name: 'Advanced expansion testing', included: false },
      { name: 'Custom dashboard', included: false },
    ],
  },
  {
    name: 'Scale',
    price: '4,500',
    description: 'Full AI training with advanced optimization and support',
    recommended: true,
    adSpend: 'Up to $50K/month',
    features: [
      { name: 'CRM integration & sales tracking', included: true },
      { name: 'Consolidated campaign structure', included: true },
      { name: 'Smart bidding implementation', included: true },
      { name: 'Search & Display campaigns', included: true },
      { name: 'Shopping campaigns', included: true },
      { name: 'Performance Max', included: true },
      { name: 'Complete tracking audit', included: true },
      { name: 'Monthly strategy sessions', included: true, detail: '2 per month' },
      { name: 'Performance reporting', included: true, detail: 'Weekly' },
      { name: 'Learning period management', included: true },
      { name: 'Dedicated account manager', included: true },
      { name: 'Landing page optimization', included: true },
      { name: 'Advanced expansion testing', included: true },
      { name: 'Custom dashboard', included: true },
    ],
  },
  {
    name: 'Enterprise',
    price: 'Custom',
    description: 'White-glove AI training for high-growth companies',
    recommended: false,
    adSpend: 'Unlimited',
    features: [
      { name: 'CRM integration & sales tracking', included: true },
      { name: 'Consolidated campaign structure', included: true },
      { name: 'Smart bidding implementation', included: true },
      { name: 'Search & Display campaigns', included: true },
      { name: 'Shopping campaigns', included: true },
      { name: 'Performance Max', included: true },
      { name: 'Complete tracking audit', included: true },
      { name: 'Monthly strategy sessions', included: true, detail: 'Weekly' },
      { name: 'Performance reporting', included: true, detail: 'Real-time' },
      { name: 'Learning period management', included: true },
      { name: 'Dedicated account manager', included: true },
      { name: 'Landing page optimization', included: true },
      { name: 'Advanced expansion testing', included: true },
      { name: 'Custom dashboard', included: true, detail: 'Priority' },
    ],
  },
];

const faqs = [
  {
    q: 'Do you charge a percentage of ad spend?',
    a: 'No. We charge flat monthly rates based on your ad spend tier. This aligns our incentives—we succeed when you get predictable customer acquisition costs, not when you spend more. Our pricing encourages efficiency, not waste.',
  },
  {
    q: 'What if I spend less than the tier maximum?',
    a: 'No problem. The tiers are maximums, not minimums. If you spend $10K/month, the Growth plan ($2,500/mo) works perfectly. You only move to the next tier if you want to scale beyond that tier\'s ad spend maximum.',
  },
  {
    q: 'Is there a setup fee?',
    a: 'No. Your first month includes complete onboarding: CRM integration, tracking audit, campaign setup, and Phase 1 of the AI training process. Everything needed to start is included in the monthly rate.',
  },
  {
    q: 'Can I cancel before 90 days?',
    a: 'Yes, but we don\'t recommend it. The AI training process takes the full 90 days to deliver predictable results. If you cancel early, you\'ve paid for setup and learning without seeing the payoff. That said, month-to-month means you can cancel anytime—we just won\'t have completed the training process.',
  },
];
---

<BaseLayout
  title="Pricing - Transparent, No-BS Google Ads Management - ProfitSEM"
  description="Flat-rate pricing for Google Ads management. No percentages, no hidden fees, no surprises."
>
  <!-- Hero -->
  <Section background="gradient" spacing="xl">
    <Container>
      <div class="max-w-4xl mx-auto text-center text-white">
        <Heading as="h1" size="6xl" className="mb-6">
          AI Training for Your Google Ads Account
        </Heading>
        <p class="text-xl text-blue-100 mb-4">
          We train Google's AI to find your best customers. CRM integration, consolidated campaigns, smart bidding, and strategic patience over 90 days. Then you scale predictably.
        </p>
        <p class="text-lg text-blue-200 mb-8">
          Flat monthly rates. No percentage of ad spend. No hidden fees.
        </p>
        <div class="flex flex-wrap items-center justify-center gap-6 text-sm">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-emerald-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <span>90-day AI training process</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-emerald-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <span>Full refund if no ROI improvement</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-emerald-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <span>Cancel anytime after 90 days</span>
          </div>
        </div>
      </div>
    </Container>
  </Section>

  <!-- Pricing Cards -->
  <Section background="white" spacing="xl">
    <Container>
      <div class="grid lg:grid-cols-3 gap-8 mb-12">
        {plans.map((plan) => (
          <Card
            variant="bordered"
            padding="none"
            className={`overflow-hidden ${plan.recommended ? 'ring-2 ring-blue-500 relative' : ''}`}
          >
            {plan.recommended && (
              <div class="absolute -top-4 left-1/2 -translate-x-1/2 z-10">
                <Badge variant="info" size="md" className="shadow-lg">
                  Most Popular
                </Badge>
              </div>
            )}

            <div class={`p-8 ${plan.recommended ? 'bg-gradient-to-br from-blue-50 to-blue-100' : 'bg-gray-50'}`}>
              <Heading as="h2" size="2xl" className="mb-2">
                {plan.name}
              </Heading>
              <p class="text-gray-600 text-sm mb-6">{plan.description}</p>

              <div class="mb-6">
                {plan.price === 'Custom' ? (
                  <div class="text-4xl font-bold text-gray-900">Custom</div>
                ) : (
                  <div class="flex items-baseline gap-1">
                    <span class="text-gray-600 text-lg">$</span>
                    <span class="text-4xl font-bold text-gray-900">{plan.price}</span>
                    <span class="text-gray-600">/month</span>
                  </div>
                )}
                <p class="text-sm text-gray-600 mt-2">{plan.adSpend} ad spend</p>
              </div>

              <Button
                variant={plan.recommended ? 'primary' : 'ghost'}
                size="lg"
                fullWidth
                href={plan.price === 'Custom' ? '/contact' : '/free-analysis'}
              >
                {plan.price === 'Custom' ? 'Contact Sales' : 'Get Started'}
              </Button>
            </div>

            <div class="p-8">
              <p class="text-sm font-semibold text-gray-900 mb-4">What's included:</p>
              <ul class="space-y-3">
                {plan.features.map((feature) => (
                  <li class="flex items-start gap-3">
                    {feature.included ? (
                      <svg class="w-5 h-5 text-emerald-500 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                      </svg>
                    ) : (
                      <svg class="w-5 h-5 text-gray-300 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                      </svg>
                    )}
                    <span class={`text-sm ${feature.included ? 'text-gray-700' : 'text-gray-400'}`}>
                      {feature.name}
                      {feature.detail && (
                        <span class="text-xs text-gray-500 ml-1">({feature.detail})</span>
                      )}
                    </span>
                  </li>
                ))}
              </ul>
            </div>
          </Card>
        ))}
      </div>

      {/* Guarantee */}
      <div class="bg-gradient-to-r from-blue-50 to-emerald-50 border-2 border-blue-200 rounded-xl p-8 text-center max-w-4xl mx-auto">
        <div class="w-16 h-16 bg-emerald-600 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
        </div>
        <Heading as="h3" size="2xl" className="mb-4">
          90-Day Money-Back Guarantee
        </Heading>
        <p class="text-lg text-gray-700 max-w-2xl mx-auto mb-4">
          If we don't improve your ROI within 90 days, you get a full refund of our management fees. No fine print. No questions asked.
        </p>
        <p class="text-base text-gray-600 max-w-2xl mx-auto">
          We can make this guarantee because the AI training process works when done properly. The 90-day timeline isn't arbitrary—it's exactly how long Google's AI needs to learn your customer patterns and deliver predictable results.
        </p>
      </div>
    </Container>
  </Section>

  <!-- Comparison Table -->
  <Section background="gray" spacing="xl">
    <Container>
      <div class="text-center mb-12">
        <Heading as="h2" size="4xl" className="mb-4">
          Detailed Feature Comparison
        </Heading>
        <p class="text-xl text-gray-600">
          See exactly what you get with each plan
        </p>
      </div>

      <div class="bg-white rounded-xl shadow-lg overflow-hidden">
        <div class="overflow-x-auto">
          <table class="w-full">
            <thead class="bg-gray-50 border-b-2 border-gray-200">
              <tr>
                <th class="px-6 py-4 text-left text-sm font-semibold text-gray-900">Feature</th>
                <th class="px-6 py-4 text-center text-sm font-semibold text-gray-900">Growth</th>
                <th class="px-6 py-4 text-center text-sm font-semibold text-gray-900 bg-blue-50">Scale</th>
                <th class="px-6 py-4 text-center text-sm font-semibold text-gray-900">Enterprise</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
              {plans[0].features.map((feature, idx) => (
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 text-sm text-gray-700">{feature.name}</td>
                  {plans.map((plan, planIdx) => (
                    <td class={`px-6 py-4 text-center ${planIdx === 1 ? 'bg-blue-50' : ''}`}>
                      {plan.features[idx].included ? (
                        <div class="flex flex-col items-center gap-1">
                          <svg class="w-5 h-5 text-emerald-500" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                          </svg>
                          {plan.features[idx].detail && (
                            <span class="text-xs text-gray-500">{plan.features[idx].detail}</span>
                          )}
                        </div>
                      ) : (
                        <svg class="w-5 h-5 text-gray-300 mx-auto" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                        </svg>
                      )}
                    </td>
                  ))}
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      </div>
    </Container>
  </Section>

  <!-- FAQs -->
  <Section background="white" spacing="lg">
    <Container size="lg">
      <div class="text-center mb-12">
        <Heading as="h2" size="3xl" className="mb-4">
          Pricing FAQs
        </Heading>
      </div>

      <div class="max-w-3xl mx-auto space-y-6">
        {faqs.map((faq) => (
          <div class="bg-gray-50 rounded-lg p-6">
            <h3 class="font-semibold text-lg text-gray-900 mb-2">{faq.q}</h3>
            <p class="text-gray-700">{faq.a}</p>
          </div>
        ))}
      </div>
    </Container>
  </Section>

  <!-- CTA -->
  <Section background="gradient" spacing="lg">
    <Container>
      <div class="max-w-3xl mx-auto text-center text-white">
        <Heading as="h2" size="4xl" className="mb-6">
          Ready to Turn Ads Into Profit?
        </Heading>
        <p class="text-xl text-blue-100 mb-8">
          Get a custom profit analysis and see exactly how we'll grow your revenue
        </p>
        <Button variant="secondary" size="lg" href="/free-analysis">
          Get Free Profit Analysis
        </Button>
      </div>
    </Container>
  </Section>
</BaseLayout>
