---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { Container } from '../../components/layout/Container';
import { Heading } from '../../components/ui/Heading';
import { Card } from '../../components/ui/Card';

const caseStudies = [
  {
    industry: 'Medical Product Wholesaler',
    from: '$6.6k',
    to: '$21.7k',
    duration: '3 months',
    metric: 'Monthly sales',
  },
  {
    industry: 'Building/Hardware Company',
    from: '$13.4k',
    to: '$33.5k',
    duration: '4 months',
    metric: 'Monthly sales',
  },
  {
    industry: 'Luxury Watch Store',
    from: '$99k',
    to: '$250k',
    duration: '6 months',
    metric: 'Monthly sales',
  },
  {
    industry: 'Supplement Company',
    from: '$48k',
    to: '$135k',
    duration: '4 months',
    metric: 'Monthly sales',
  },
  {
    industry: 'Furniture Company',
    from: '$16.5k',
    to: '$106.8k',
    duration: '5 months',
    metric: 'Monthly sales',
  },
  {
    industry: 'B2B Enterprise SAAS Company',
    from: '198',
    to: '1,492',
    duration: '3 months',
    metric: 'Monthly signups',
  },
];

const whatToExpect = [
  {
    title: 'Deep Dive into Your Ads',
    description: 'We\'ll review your current Google Ads performance and identify profit leaks.',
    icon: 'search',
  },
  {
    title: 'Custom 90-Day Roadmap',
    description: 'Get a personalized plan showing exactly how we\'d improve your ROI.',
    icon: 'map',
  },
  {
    title: 'Projected ROI Analysis',
    description: 'See realistic projections based on your specific situation and goals.',
    icon: 'chart',
  },
];
---

<BaseLayout
  title="You're a Perfect Fit! - Schedule Your Strategy Session | ProfitSEM"
  description="Based on your responses, we can help you turn Google Ads into a profit machine. Let's schedule your strategy session."
>
  <!-- Compact Success Banner -->
  <section class="bg-gradient-to-r from-emerald-500 to-blue-600 py-4 md:py-6">
    <Container>
      <div class="flex items-center justify-center gap-3 text-center">
        <div class="w-10 h-10 bg-white/20 rounded-full flex items-center justify-center flex-shrink-0">
          <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
        </div>
        <div>
          <p class="text-white font-bold text-lg md:text-xl">
            Congratulations—You Qualify!
          </p>
          <p class="text-white/90 text-sm md:text-base">
            Based on your responses, you're an ideal fit for our AI transition framework. Secure your spot below.
          </p>
        </div>
      </div>
    </Container>
  </section>

  <!-- Booking Calendar Section - PRIMARY CTA -->
  <section class="bg-white py-12 md:py-16">
    <Container>
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-8">
          <Heading as="h1" size="5xl" className="mb-4 text-navy-950">
            Final Step: Schedule Your Strategy Session
          </Heading>
          <p class="text-xl text-gray-700 mb-3">
            Pick a time that works for you. You'll meet with a Google Ads strategist who specializes in your industry.
          </p>
          <div class="inline-flex items-center gap-2 bg-emerald-50 border border-emerald-200 rounded-lg px-4 py-2">
            <svg class="w-5 h-5 text-emerald-600" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
            </svg>
            <span class="text-emerald-900 font-semibold text-sm">30-minute call • Free account review • No obligation</span>
          </div>
        </div>

        <!-- Google Calendar Appointment Scheduling -->
        <div class="bg-white rounded-2xl p-4 md:p-6 shadow-2xl border-2 border-emerald-200 ring-4 ring-emerald-100">
          <iframe
            src="https://calendar.google.com/calendar/appointments/schedules/AcZssZ22TZn1GblrfkptTo90nvQGoIoG9NUl6lJMGihnSt9VS_RjlrbtS1YNLFlvFwwp3hdyoOw6clyC?gv=true"
            style="border: 0"
            width="100%"
            height="600"
            frameborder="0"
          ></iframe>
        </div>
      </div>
    </Container>
  </section>

  <!-- What to Expect -->
  <section class="bg-gray-50 py-16 md:py-20 border-y border-gray-200">
    <Container>
      <div class="text-center mb-12">
        <Heading as="h2" size="4xl" className="mb-4">
          What to Expect on the Call
        </Heading>
        <p class="text-xl text-gray-600">
          Here's what we'll cover in your 30-minute strategy session
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
        {whatToExpect.map((item) => (
          <Card className="text-center p-8 hover:shadow-xl transition-shadow">
            <div class="w-16 h-16 bg-gradient-to-br from-emerald-500 to-blue-500 rounded-lg flex items-center justify-center mx-auto mb-6 shadow-lg">
              {item.icon === 'search' && (
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                </svg>
              )}
              {item.icon === 'map' && (
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7" />
                </svg>
              )}
              {item.icon === 'chart' && (
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                </svg>
              )}
            </div>
            <Heading as="h3" size="xl" className="mb-4">
              {item.title}
            </Heading>
            <p class="text-gray-600 leading-relaxed">
              {item.description}
            </p>
          </Card>
        ))}
      </div>

      <div class="mt-12 max-w-3xl mx-auto">
        <Card className="p-8 bg-gradient-to-br from-emerald-50 to-blue-50 border-2 border-emerald-200">
          <div class="flex items-start gap-4">
            <div class="flex-shrink-0">
              <svg class="w-12 h-12 text-emerald-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
              </svg>
            </div>
            <div>
              <Heading as="h3" size="xl" className="mb-3 text-navy-950">
                No Pressure, Just Honest Advice
              </Heading>
              <p class="text-gray-700 leading-relaxed">
                This isn't a sales pitch. We'll review your account, identify opportunities, and if we can help, we'll explain how. If we can't, we'll tell you that too and point you in the right direction.
              </p>
            </div>
          </div>
        </Card>
      </div>
    </Container>
  </section>

  <!-- Results Preview -->
  <section class="bg-gradient-to-br from-navy-950 via-navy-900 to-navy-800 py-16 md:py-24 relative overflow-hidden">
    <!-- Background Elements -->
    <div class="absolute inset-0 opacity-5">
      <div class="absolute top-0 right-0 w-96 h-96 bg-emerald-400 rounded-full blur-3xl" />
      <div class="absolute bottom-0 left-0 w-96 h-96 bg-blue-500 rounded-full blur-3xl" />
    </div>

    <Container className="relative z-10">
      <div class="text-center mb-12">
        <Heading as="h2" size="4xl" className="mb-6 text-white">
          Results Like This Started With A Strategy Call
        </Heading>
        <p class="text-emerald-400 text-xl font-semibold mb-2">
          All of these accounts went through the same process you're starting today.
        </p>
        <p class="text-blue-100 text-lg">
          Now these companies are overflowing with new customers.
        </p>
      </div>

      <!-- Case Studies Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-6xl mx-auto">
        {caseStudies.map((study) => (
          <Card className="bg-white/5 backdrop-blur border border-white/10 p-6 hover:bg-white/10 transition-colors">
            <div class="flex items-start gap-3 mb-4">
              <div class="w-12 h-12 bg-emerald-500 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                </svg>
              </div>
              <div>
                <h3 class="text-emerald-400 font-bold text-sm mb-2">{study.industry}</h3>
              </div>
            </div>

            <div class="space-y-2">
              <div class="flex items-baseline gap-2">
                <span class="text-gray-400 text-sm">From:</span>
                <span class="text-white font-bold text-lg">{study.from}</span>
              </div>
              <div class="flex items-baseline gap-2">
                <span class="text-gray-400 text-sm">To:</span>
                <span class="text-emerald-400 font-bold text-2xl">{study.to}</span>
              </div>
              <div class="pt-2 border-t border-white/10">
                <span class="text-blue-300 text-sm font-semibold">{study.metric} in {study.duration}</span>
              </div>
            </div>
          </Card>
        ))}
      </div>

      <div class="text-center mt-12">
        <p class="text-white text-lg font-semibold mb-2">
          Rated <span class="text-emerald-400">4.8/5 Stars</span> on Clutch
        </p>
        <p class="text-blue-200">
          1000+ Ad Accounts Reviewed • 250+ Success Stories
        </p>
      </div>
    </Container>
  </section>

  <!-- Important Reminders -->
  <section class="bg-white py-16 md:py-20">
    <Container>
      <div class="max-w-3xl mx-auto">
        <div class="text-center mb-12">
          <Heading as="h2" size="4xl" className="mb-4">
            Before Your Call
          </Heading>
          <p class="text-xl text-gray-600">
            A few important things to prepare
          </p>
        </div>

        <div class="space-y-4">
          <Card className="p-6 border-l-4 border-blue-500 bg-blue-50">
            <p class="text-gray-900 leading-relaxed">
              <strong class="text-navy-950">Duration:</strong> Our call will last <strong class="text-blue-500">30 minutes</strong>. The meeting link will be in your calendar confirmation.
            </p>
          </Card>

          <Card className="p-6 border-l-4 border-emerald-500 bg-emerald-50">
            <p class="text-gray-900 leading-relaxed">
              <strong class="text-navy-950">Be prepared:</strong> Have your computer ready and access to your Google Ads account for the review.
            </p>
          </Card>

          <Card className="p-6 border-l-4 border-purple-500 bg-purple-50">
            <p class="text-gray-900 leading-relaxed">
              <strong class="text-navy-950">Environment:</strong> Find a quiet room with no distractions. Not in a car or airport - this deserves your full attention.
            </p>
          </Card>

          <Card className="p-6 border-l-4 border-red-500 bg-red-50">
            <p class="text-gray-900 leading-relaxed">
              <strong class="text-red-600">Please be on time:</strong> Late arrivals cannot be accommodated and will need to reschedule.
            </p>
          </Card>
        </div>

        <div class="text-center mt-12 pt-8 border-t border-gray-200">
          <p class="text-xl text-gray-900 mb-4">
            Looking forward to helping you <span class="text-emerald-500 font-bold">turn Google Ads into a profit machine</span>!
          </p>
          <p class="text-navy-950 font-semibold text-lg">See you soon!</p>
          <p class="text-gray-600 font-semibold mt-2">- The ProfitSEM Team</p>
        </div>
      </div>
    </Container>
  </section>
</BaseLayout>
