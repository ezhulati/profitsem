---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Container } from '../components/layout/Container';
import { Heading } from '../components/ui/Heading';
import { Card } from '../components/ui/Card';

const caseStudies = [
  {
    industry: 'Medical Product Wholesaler',
    from: '$6.6k',
    to: '$21.7k',
    duration: '3 months',
    metric: 'Monthly sales',
  },
  {
    industry: 'Building/Hardware Company',
    from: '$13.4k',
    to: '$33.5k',
    duration: '4 months',
    metric: 'Monthly sales',
  },
  {
    industry: 'Luxury Watch Store',
    from: '$99k',
    to: '$250k',
    duration: '6 months',
    metric: 'Monthly sales',
  },
  {
    industry: 'Supplement Company',
    from: '$48k',
    to: '$135k',
    duration: '4 months',
    metric: 'Monthly sales',
  },
  {
    industry: 'Furniture Company',
    from: '$16.5k',
    to: '$106.8k',
    duration: '5 months',
    metric: 'Monthly sales',
  },
  {
    industry: 'B2B Enterprise SAAS Company',
    from: '198',
    to: '1,492',
    duration: '3 months',
    metric: 'Monthly signups',
  },
];

const nextSteps = [
  {
    number: '1',
    title: 'Check Your Email',
    description: 'You\'ve been sent a confirmation email with your meeting time and calendar invite. Please accept the invite to confirm your attendance.',
    color: 'from-emerald-500 to-emerald-600',
  },
  {
    number: '2',
    title: 'Prepare Your Account',
    description: 'Make sure you have access to your Google Ads account. We\'ll need to review your campaigns together during the call.',
    color: 'from-blue-500 to-blue-600',
  },
  {
    number: '3',
    title: 'Join the Call on Time',
    description: '30-minute call. Please be punctual - late arrivals cannot be accommodated and will need to reschedule.',
    color: 'from-purple-500 to-purple-600',
  },
];
---

<BaseLayout title="Thank You - Account Review Confirmed | ProfitSEM">
  <!-- Success Hero -->
  <section class="bg-gradient-to-br from-navy-950 via-navy-900 to-navy-800 py-16 md:py-24 relative overflow-hidden">
    <!-- Background Elements -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-20 right-20 w-96 h-96 bg-blue-500 rounded-full blur-3xl" />
      <div class="absolute bottom-20 left-20 w-96 h-96 bg-emerald-400 rounded-full blur-3xl" />
    </div>

    <Container className="relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <!-- Success Icon -->
        <div class="w-24 h-24 mx-auto mb-8 bg-emerald-500 rounded-full flex items-center justify-center shadow-2xl">
          <svg class="w-12 h-12 text-white" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
        </div>

        <Heading as="h1" size="6xl" className="mb-6 text-white">
          You're All Set!
        </Heading>

        <p class="text-xl md:text-2xl text-blue-100 mb-8 leading-relaxed">
          Your Google Ads account review has been confirmed. Check your email for the meeting details and calendar invite.
        </p>

        <div class="bg-white/10 backdrop-blur border border-emerald-400/30 rounded-2xl p-8 text-left">
          <p class="text-white text-lg leading-relaxed mb-4">
            You'll be meeting with a Google Ads strategist who specializes in your industry and will provide a comprehensive review to improve your account performance.
          </p>
          <p class="text-emerald-400 font-semibold text-lg">
            Looking forward to helping you grow your results from Google Ads!
          </p>
        </div>
      </div>
    </Container>
  </section>

  <!-- What Happens Next -->
  <section class="bg-white py-16 md:py-20">
    <Container>
      <div class="text-center mb-12">
        <Heading as="h2" size="4xl" className="mb-4">
          What Happens Next
        </Heading>
        <p class="text-xl text-gray-600">
          Here's what you need to know before your account review
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
        {nextSteps.map((step) => (
          <Card className="text-center p-8 hover:shadow-xl transition-shadow">
            <div class={`w-16 h-16 bg-gradient-to-br ${step.color} rounded-full flex items-center justify-center mx-auto mb-6 shadow-lg`}>
              <span class="text-2xl font-bold text-white">{step.number}</span>
            </div>
            <Heading as="h3" size="xl" className="mb-4">
              {step.title}
            </Heading>
            <p class="text-gray-600 leading-relaxed">
              {step.description}
            </p>
          </Card>
        ))}
      </div>
    </Container>
  </section>

  <!-- Booking Calendar Section -->
  <section class="bg-gray-50 py-16 md:py-20 border-y border-gray-200">
    <Container>
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <Heading as="h2" size="4xl" className="mb-4">
            Need to Reschedule?
          </Heading>
          <p class="text-lg text-gray-600">
            Pick a new time that works better for you
          </p>
        </div>

        <!-- Google Calendar Appointment Scheduling -->
        <div class="bg-white rounded-2xl p-4 md:p-6 shadow-xl border border-gray-200">
          <iframe
            src="https://calendar.google.com/calendar/appointments/schedules/AcZssZ22TZn1GblrfkptTo90nvQGoIoG9NUl6lJMGihnSt9VS_RjlrbtS1YNLFlvFwwp3hdyoOw6clyC?gv=true"
            style="border: 0"
            width="100%"
            height="600"
            frameborder="0"
          ></iframe>
        </div>
      </div>
    </Container>
  </section>

  <!-- Results Preview -->
  <section class="bg-gradient-to-br from-navy-950 via-navy-900 to-navy-800 py-16 md:py-24 relative overflow-hidden">
    <!-- Background Elements -->
    <div class="absolute inset-0 opacity-5">
      <div class="absolute top-0 right-0 w-96 h-96 bg-emerald-400 rounded-full blur-3xl" />
      <div class="absolute bottom-0 left-0 w-96 h-96 bg-blue-500 rounded-full blur-3xl" />
    </div>

    <Container className="relative z-10">
      <div class="text-center mb-12">
        <Heading as="h2" size="4xl" className="mb-6 text-white">
          Results Like This Started With An Account Review
        </Heading>
        <p class="text-emerald-400 text-xl font-semibold mb-2">
          All of these accounts went through a Google Ads analysis.
        </p>
        <p class="text-blue-100 text-lg">
          Now these companies are overflowing with new customers.
        </p>
      </div>

      <!-- Case Studies Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-6xl mx-auto">
        {caseStudies.map((study) => (
          <Card className="bg-white/5 backdrop-blur border border-white/10 p-6 hover:bg-white/10 transition-colors">
            <div class="flex items-start gap-3 mb-4">
              <div class="w-12 h-12 bg-emerald-500 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                </svg>
              </div>
              <div>
                <h3 class="text-emerald-400 font-bold text-sm mb-2">{study.industry}</h3>
              </div>
            </div>

            <div class="space-y-2">
              <div class="flex items-baseline gap-2">
                <span class="text-gray-400 text-sm">From:</span>
                <span class="text-white font-bold text-lg">{study.from}</span>
              </div>
              <div class="flex items-baseline gap-2">
                <span class="text-gray-400 text-sm">To:</span>
                <span class="text-emerald-400 font-bold text-2xl">{study.to}</span>
              </div>
              <div class="pt-2 border-t border-white/10">
                <span class="text-blue-300 text-sm font-semibold">{study.metric} in {study.duration}</span>
              </div>
            </div>
          </Card>
        ))}
      </div>

      <div class="text-center mt-12">
        <p class="text-white text-lg font-semibold mb-2">
          Rated <span class="text-emerald-400">4.8/5 Stars</span> on Clutch
        </p>
        <p class="text-blue-200">
          1000+ Ad Accounts Reviewed â€¢ 250+ Success Stories
        </p>
      </div>
    </Container>
  </section>

  <!-- Important Reminders -->
  <section class="bg-white py-16 md:py-20">
    <Container>
      <div class="max-w-3xl mx-auto">
        <div class="text-center mb-12">
          <Heading as="h2" size="4xl" className="mb-4">
            Important Reminders
          </Heading>
        </div>

        <div class="space-y-4">
          <Card className="p-6 border-l-4 border-blue-500 bg-blue-50">
            <p class="text-gray-900 leading-relaxed">
              <strong class="text-navy-950">Duration:</strong> Our call will last <strong class="text-blue-500">30 minutes</strong>. The meeting link is in your calendar event.
            </p>
          </Card>

          <Card className="p-6 border-l-4 border-red-500 bg-red-50">
            <p class="text-gray-900 leading-relaxed">
              <strong class="text-red-600">Please be on time:</strong> Late arrivals cannot be accommodated and will need to reschedule. Please do not be late.
            </p>
          </Card>

          <Card className="p-6 border-l-4 border-emerald-500 bg-emerald-50">
            <p class="text-gray-900 leading-relaxed">
              <strong class="text-navy-950">Environment:</strong> Ensure you're in a quiet room with no distractions - not in a car or airport. Give the call your full attention.
            </p>
          </Card>

          <Card className="p-6 border-l-4 border-purple-500 bg-purple-50">
            <p class="text-gray-900 leading-relaxed">
              <strong class="text-navy-950">Be prepared:</strong> Have your computer ready and access to your Google Ads account for the review.
            </p>
          </Card>
        </div>

        <div class="text-center mt-12 pt-8 border-t border-gray-200">
          <p class="text-xl text-gray-900 mb-4">
            We look forward to helping you <span class="text-emerald-500 font-bold">increase sales and ROI</span> from Google Ads!
          </p>
          <p class="text-navy-950 font-semibold text-lg">To your success!</p>
          <p class="text-gray-600 font-semibold mt-2">- The ProfitSEM Team</p>
        </div>
      </div>
    </Container>
  </section>
</BaseLayout>
