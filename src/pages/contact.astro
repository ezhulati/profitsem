---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Container } from '../components/layout/Container';
import { Section } from '../components/layout/Section';
import { Heading } from '../components/ui/Heading';
import { ContactForm } from '../components/forms/ContactForm';
---

<BaseLayout
  title="Contact Us - Get in Touch - ProfitSEM"
  description="Contact ProfitSEM for Google Ads management, PPC audits, or any questions. We respond within 24 hours."
>
  <!-- Hero -->
  <Section background="gradient" spacing="lg">
    <Container>
      <div class="max-w-3xl mx-auto text-center text-white">
        <Heading as="h1" size="5xl" className="mb-6">
          Let's Talk About Your Google Ads
        </Heading>
        <p class="text-xl text-blue-100">
          Have questions? Need help with your campaigns? We're here to help.
        </p>
      </div>
    </Container>
  </Section>

  <!-- Contact Form & Info -->
  <Section background="white" spacing="xl">
    <Container size="lg">
      <div class="grid lg:grid-cols-3 gap-12">
        <!-- Contact Form -->
        <div class="lg:col-span-2">
          <div class="bg-gray-50 rounded-2xl p-8 md:p-12">
            <Heading as="h2" size="2xl" className="mb-6">
              Send Us a Message
            </Heading>
            <ContactForm client:load />
          </div>
        </div>

        <!-- Contact Info Sidebar -->
        <div class="space-y-6">
          {/* Quick Contact */}
          <div class="bg-blue-50 border border-blue-200 rounded-xl p-6">
            <Heading as="h3" size="lg" className="mb-4">
              Quick Contact
            </Heading>
            <div class="space-y-4">
              <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-blue-600 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                <div>
                  <p class="font-medium text-gray-900">Email</p>
                  <a href="mailto:hello@profitsem.com" class="text-blue-600 hover:underline">
                    hello@profitsem.com
                  </a>
                </div>
              </div>

              <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-blue-600 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                <div>
                  <p class="font-medium text-gray-900">Phone</p>
                  <a href="tel:+15551234567" class="text-blue-600 hover:underline">
                    +1 (555) 123-4567
                  </a>
                </div>
              </div>

              <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-blue-600 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <div>
                  <p class="font-medium text-gray-900">Response Time</p>
                  <p class="text-gray-600">Within 24 hours</p>
                </div>
              </div>
            </div>
          </div>

          {/* Office Hours */}
          <div class="bg-gray-50 rounded-xl p-6">
            <Heading as="h3" size="lg" className="mb-4">
              Office Hours
            </Heading>
            <div class="space-y-2 text-sm">
              <div class="flex justify-between">
                <span class="text-gray-600">Monday - Friday</span>
                <span class="font-medium">9am - 6pm EST</span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-600">Saturday</span>
                <span class="font-medium">10am - 2pm EST</span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-600">Sunday</span>
                <span class="font-medium">Closed</span>
              </div>
            </div>
            <p class="text-xs text-gray-500 mt-4">
              * Emergency support available 24/7 for Scale & Enterprise clients
            </p>
          </div>

          {/* Social Media */}
          <div class="bg-gray-50 rounded-xl p-6">
            <Heading as="h3" size="lg" className="mb-4">
              Follow Us
            </Heading>
            <div class="flex gap-4">
              <a
                href="https://linkedin.com/company/profitsem"
                target="_blank"
                rel="noopener noreferrer"
                class="w-10 h-10 bg-blue-600 hover:bg-blue-700 text-white rounded-lg flex items-center justify-center transition-colors"
                aria-label="LinkedIn"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.338 16.338H13.67V12.16c0-.995-.017-2.277-1.387-2.277-1.39 0-1.601 1.086-1.601 2.207v4.248H8.014v-8.59h2.559v1.174h.037c.356-.675 1.227-1.387 2.526-1.387 2.703 0 3.203 1.778 3.203 4.092v4.711zM5.005 6.575a1.548 1.548 0 11-.003-3.096 1.548 1.548 0 01.003 3.096zm-1.337 9.763H6.34v-8.59H3.667v8.59zM17.668 1H2.328C1.595 1 1 1.581 1 2.298v15.403C1 18.418 1.595 19 2.328 19h15.34c.734 0 1.332-.582 1.332-1.299V2.298C19 1.581 18.402 1 17.668 1z" clip-rule="evenodd" />
                </svg>
              </a>
              <a
                href="https://twitter.com/profitsem"
                target="_blank"
                rel="noopener noreferrer"
                class="w-10 h-10 bg-blue-400 hover:bg-blue-500 text-white rounded-lg flex items-center justify-center transition-colors"
                aria-label="Twitter"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M6.29 18.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0020 3.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.073 4.073 0 01.8 7.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 010 16.407a11.616 11.616 0 006.29 1.84" />
                </svg>
              </a>
              <a
                href="https://youtube.com/@profitsem"
                target="_blank"
                rel="noopener noreferrer"
                class="w-10 h-10 bg-red-600 hover:bg-red-700 text-white rounded-lg flex items-center justify-center transition-colors"
                aria-label="YouTube"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z" clip-rule="evenodd" />
                </svg>
              </a>
            </div>
          </div>

          {/* Prefer Email? */}
          <div class="bg-green-50 border border-green-200 rounded-xl p-6">
            <Heading as="h3" size="lg" className="mb-2">
              Prefer Email?
            </Heading>
            <p class="text-gray-700 text-sm mb-4">
              For general inquiries, send us an email at:
            </p>
            <a
              href="mailto:hello@profitsem.com"
              class="inline-flex items-center gap-2 text-blue-600 hover:text-blue-700 font-semibold"
            >
              hello@profitsem.com
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
              </svg>
            </a>
          </div>
        </div>
      </div>
    </Container>
  </Section>

  <!-- Map/Location (Placeholder) -->
  <Section background="gray" spacing="lg">
    <Container>
      <div class="text-center mb-8">
        <Heading as="h2" size="3xl" className="mb-4">
          Our Office
        </Heading>
        <p class="text-gray-600">
          123 Digital Ave, Suite 456<br />
          San Francisco, CA 94105
        </p>
      </div>

      <div class="bg-gray-200 rounded-xl h-96 flex items-center justify-center">
        <p class="text-gray-500">
          Map placeholder - Google Maps embed would go here
        </p>
      </div>
    </Container>
  </Section>
</BaseLayout>
