---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { Container } from '../../components/layout/Container';
import { Section } from '../../components/layout/Section';
import { Heading } from '../../components/ui/Heading';
import { Card } from '../../components/ui/Card';
import { Button } from '../../components/ui/Button';
import { Icon } from '../../components/ui/Icon';
import { CTASection } from '../../components/sections/CTASection';

const services = [
  {
    slug: 'google-ads',
    icon: 'target' as const,
    title: 'Complete AI Training Program',
    description: 'Full 90-day process: CRM integration, consolidated campaigns, smart bidding, and strategic patience',
    features: [
      'CRM integration (Google learns from real customers)',
      'Consolidated campaign structure (concentrated data)',
      'Smart bidding implementation (AI-driven pricing)',
      'Strategic guidance (not daily micro-management)',
      'All campaign types: Search, Display, Shopping, Performance Max',
    ],
    results: 'Predictable CAC in 90 days',
  },
  {
    slug: 'audit',
    icon: 'chart' as const,
    title: 'AI Readiness Assessment',
    description: 'Evaluate your account\'s current state and identify what needs fixing before AI training',
    features: [
      'Tracking quality audit (is Google learning from real sales?)',
      'Campaign structure analysis (fragmented vs consolidated)',
      'Budget waste identification',
      'Custom 90-day AI training roadmap',
    ],
    results: 'Free Assessment',
  },
  {
    slug: 'conversion-tracking',
    icon: 'trending-up' as const,
    title: 'CRM Integration & Tracking',
    description: 'Connect your CRM so Google learns from actual customers, not just clicks or form fills',
    features: [
      'CRM → Google Ads integration',
      'Enhanced conversion tracking',
      'Offline conversion import setup',
      'Customer match audience building',
    ],
    results: 'Foundation of AI Training',
  },
  {
    slug: 'landing-pages',
    icon: 'zap' as const,
    title: 'Landing Page Optimization',
    description: 'Better conversion rates mean better data for Google\'s AI to learn from',
    features: [
      'Conversion-focused page design',
      'A/B testing framework',
      'Mobile & speed optimization',
      'Message-to-market fit analysis',
    ],
    results: 'Higher Quality AI Training Data',
  },
];
---

<BaseLayout
  title="Google Ads Services - ProfitSEM"
  description="Comprehensive Google Ads services focused on profit. From full management to audits and optimization."
>
  <!-- Hero Section -->
  <Section background="gradient" spacing="xl">
    <Container>
      <div class="text-center text-white max-w-4xl mx-auto">
        <Heading as="h1" size="6xl" className="mb-6">
          AI Training Services for Google Ads
        </Heading>
        <p class="text-xl text-blue-100 mb-8">
          We train Google's AI to find your best customers through CRM integration, consolidated campaigns, smart bidding, and strategic patience. The result: predictable customer acquisition costs in 90 days.
        </p>
        <Button variant="secondary" size="lg" href="/free-analysis">
          Get Free Assessment
        </Button>
      </div>
    </Container>
  </Section>

  <!-- Services Grid -->
  <Section background="white" spacing="xl">
    <Container>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {services.map((service) => (
          <Card variant="bordered" padding="lg" className="hover:shadow-xl transition-shadow">
            <div class="mb-4">
              <div class="w-14 h-14 bg-gradient-to-br from-blue-500 to-blue-600 rounded-xl flex items-center justify-center">
                <Icon name={service.icon} size="lg" className="text-white" />
              </div>
            </div>

            <Heading as="h2" size="xl" className="mb-3">
              {service.title}
            </Heading>

            <p class="text-gray-600 mb-6">
              {service.description}
            </p>

            <ul class="space-y-2 mb-6">
              {service.features.map((feature) => (
                <li class="flex items-start gap-2 text-sm">
                  <svg class="w-5 h-5 text-emerald-500 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                  <span class="text-gray-700">{feature}</span>
                </li>
              ))}
            </ul>

            <div class="flex items-center justify-between pt-4 border-t border-gray-200">
              <div class="text-sm font-semibold text-emerald-600">
                {service.results}
              </div>
              <a
                href={`/services/${service.slug}`}
                class="text-blue-500 hover:text-blue-600 font-semibold text-sm flex items-center gap-1"
              >
                Learn More
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </a>
            </div>
          </Card>
        ))}
      </div>
    </Container>
  </Section>

  <!-- Process Overview -->
  <Section background="gray" spacing="lg">
    <Container>
      <div class="text-center mb-12">
        <Heading as="h2" size="4xl" className="mb-4">
          The 90-Day AI Training Process
        </Heading>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Each phase builds on the previous. Skip steps = poor results.
        </p>
      </div>

      <div class="grid md:grid-cols-5 gap-4 max-w-6xl mx-auto">
        <div class="text-center">
          <div class="w-16 h-16 bg-gradient-to-br from-emerald-500 to-emerald-600 text-white rounded-full flex items-center justify-center text-2xl font-bold mx-auto mb-3">
            1
          </div>
          <h3 class="font-bold text-base mb-2">Connect The Dots</h3>
          <p class="text-gray-600 text-xs">CRM integration & tracking audit (Week 1-2)</p>
        </div>
        <div class="text-center">
          <div class="w-16 h-16 bg-gradient-to-br from-emerald-500 to-emerald-600 text-white rounded-full flex items-center justify-center text-2xl font-bold mx-auto mb-3">
            2
          </div>
          <h3 class="font-bold text-base mb-2">Build Foundation</h3>
          <p class="text-gray-600 text-xs">Consolidated campaigns & AI learning (Week 3-6)</p>
        </div>
        <div class="text-center">
          <div class="w-16 h-16 bg-gradient-to-br from-emerald-500 to-emerald-600 text-white rounded-full flex items-center justify-center text-2xl font-bold mx-auto mb-3">
            3
          </div>
          <h3 class="font-bold text-base mb-2">Let AI Take Over</h3>
          <p class="text-gray-600 text-xs">Smart bidding activation (Week 7-9)</p>
        </div>
        <div class="text-center">
          <div class="w-16 h-16 bg-gradient-to-br from-emerald-500 to-emerald-600 text-white rounded-full flex items-center justify-center text-2xl font-bold mx-auto mb-3">
            4
          </div>
          <h3 class="font-bold text-base mb-2">Scale Confidently</h3>
          <p class="text-gray-600 text-xs">Predictable expansion (Week 10-12)</p>
        </div>
        <div class="text-center">
          <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-blue-600 text-white rounded-full flex items-center justify-center text-2xl font-bold mx-auto mb-3">
            5
          </div>
          <h3 class="font-bold text-base mb-2">Maintain & Grow</h3>
          <p class="text-gray-600 text-xs">Strategic guidance (Month 4+)</p>
        </div>
      </div>

      <div class="text-center mt-8">
        <Button variant="primary" size="md" href="/process">
          See Detailed Timeline →
        </Button>
      </div>
    </Container>
  </Section>

  <!-- CTA Section -->
  <CTASection client:visible />
</BaseLayout>
