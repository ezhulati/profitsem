---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Container } from '../components/layout/Container';
import { Section } from '../components/layout/Section';
import { QualificationForm } from '../components/forms/QualificationForm';
---

<BaseLayout
  title="Get Your Free Profit Analysis - ProfitSEM"
  description="Get a custom Google Ads profit analysis. See exactly how we'll grow your revenue in 90 days. No sales pitch, just a clear roadmap."
>
  <Section background="gray" spacing="xl">
    <Container size="lg">
      <div class="text-center mb-12">
        <h1 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-4">
          Get Your Free Profit Analysis
        </h1>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          Answer a few quick questions and we'll create a custom roadmap showing exactly how
          we'll turn your Google Ads into a profit engine in 90 days.
        </p>

        <div class="flex flex-wrap items-center justify-center gap-6 mt-8 text-sm text-gray-600">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-emerald-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <span>Takes 3 minutes</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-emerald-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <span>No credit card required</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-emerald-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <span>Custom profit roadmap</span>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-2xl shadow-xl p-8 md:p-12">
        <QualificationForm client:load />
      </div>

      {/* Trust Badges */}
      <div class="mt-12 text-center">
        <p class="text-sm text-gray-500 mb-4">Trusted by 200+ businesses</p>
        <div class="flex items-center justify-center gap-8 opacity-60">
          <div class="text-gray-600 font-semibold">Google Partner</div>
          <div class="text-gray-600 font-semibold">4.8/5 Rating</div>
          <div class="text-gray-600 font-semibold">247% Avg ROI</div>
        </div>
      </div>
    </Container>
  </Section>
</BaseLayout>
