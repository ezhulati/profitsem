---
import '../styles/global.css';
import { ViewTransitions } from 'astro:transitions';
import { Navigation } from '../components/layout/Navigation';
import { Footer } from '../components/layout/Footer';
import { StructuredData } from '../components/seo/StructuredData';
import GoogleAnalytics from '../components/analytics/GoogleAnalytics.astro';
import Analytics from '@vercel/analytics/astro';

interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
}

const {
  title = 'ProfitSEM - Profitable Google Ads in 90 Days',
  description = 'World-class Google Ads agency focused on profit, not just traffic. No contracts. Just results. Book your free analysis today.',
  ogImage = '/images/og-default.jpg'
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const ogImageURL = new URL(ogImage, Astro.site);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:image" content={ogImageURL} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content={title} />
    <meta property="og:site_name" content="ProfitSEM" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageURL} />
    <meta name="twitter:image:alt" content={title} />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Sora:wght@400;600;700;800&family=Inter:wght@400;500;600&display=swap"
      rel="stylesheet"
    />

    <!-- Organization Schema (Global) -->
    <StructuredData
      schema={{
        type: 'Organization',
        name: 'ProfitSEM',
        description: 'Profit-focused Google Ads management agency. Turn Google Ads into profit machines with our 90-day guarantee.',
        url: 'https://profitsem.vercel.app',
        logo: 'https://profitsem.vercel.app/logo.png',
        sameAs: [
          'https://twitter.com/profitsem',
          'https://linkedin.com/company/profitsem',
        ],
      }}
      client:only="react"
    />

    <!-- Page-specific structured data slot -->
    <slot name="structured-data" />

    <!-- Google Analytics -->
    <GoogleAnalytics />

    <!-- View Transitions -->
    <ViewTransitions />

    <title>{title}</title>
  </head>
  <body>
    <Navigation client:load sticky />
    <main>
      <slot />
    </main>
    <Footer />
    <Analytics />
  </body>
</html>
